@{
    ViewData["Title"] = "DisplayForUser";
}

@model EducationModel

<h3>Eğitimi Görüntüle</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <table class="table">
            <tr>
                <td><b>Eğitim Adı</b></td>
                <td>@Model.Name</td>
            </tr>
            <tr>
                <td><b>Eğitim Açıklama</b></td>
                <td>@Model.Description</td>
            </tr>
            <tr>
                <td><b>Eğitmen</b></td>
                <td>@Model.TeachersUserName</td>
            </tr>
            <tr>
                <td><b>Eğitim Videosu</b></td>
                <td>
                    <video width="360" height="320" controls="controls">
                        <source src="~/Videos/@Model.Link" type="video/mp4" />
                        Tarayıcınız video etiketini desteklemiyor.
                    </video>

                </td>
            </tr>
        </table>

        <a asp-action="IndexForUser" class="btn btn-outline-secondary">Geri Dön</a>

    </div>
</div>